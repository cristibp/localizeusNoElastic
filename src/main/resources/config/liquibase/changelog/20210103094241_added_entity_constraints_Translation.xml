<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Translation.
    -->
    <changeSet id="20210103094241-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="ref_translation_key_id"
                                 baseTableName="translation"
                                 constraintName="fk_translation_ref_translation_key_id"
                                 referencedColumnNames="id"
                                 referencedTableName="translation_key"/>

        <addForeignKeyConstraint baseColumnNames="ref_language_id"
                                 baseTableName="translation"
                                 constraintName="fk_translation_ref_language_id"
                                 referencedColumnNames="id"
                                 referencedTableName="language"/>

    </changeSet>
</databaseChangeLog>
